SIGNUP_REQUIRE_EMAIL_VERIFICATION=true
SIGNUP_ALLOW_PASSWORDLESS=true


# RATE LIMITING
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
