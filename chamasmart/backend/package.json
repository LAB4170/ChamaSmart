{
  "name": "chamasmart-backend",
  "version": "1.0.0",
  "description": "ChamaSmart backend API for managing chama groups",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config=tests/jest.config.clean.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --runInBand --config=tests/jest.config.clean.js --coverage",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --config=tests/jest.config.clean.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=tests/jest.config.clean.js --coverageReporters=html,text-lcov",
    "test:threshold": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=tests/jest.config.clean.js --coverageThreshold='{\"global\":{\"branches\":80,\"functions\":80,\"lines\":80,\"statements\":80}}'",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint . --ext .js --fix",
    "docs": "swagger-jsdoc -d swaggerDef.js routes/*.js -o swagger.json",
    "docs:serve": "swagger-ui-express -s swagger.json -p 3001",
    "migrate": "npm run migrate:public && npm run migrate:table-banking && npm run migrate:performance && npm run migrate:welfare",
    "migrate:public": "node scripts/run_migration.js",
    "migrate:performance": "node scripts/run_performance_migration.js",
    "migrate:table-banking": "node scripts/run_table_banking_migration.js",
    "migrate:welfare": "node scripts/run_welfare_migration.js",
    "db:apply-invites": "node scripts/apply_schema.js",
    "db:reset": "node scripts/reset-db.js",
    "health": "node scripts/health-check.js",
    "monitor": "node scripts/metrics-dashboard.js",
    "ci": "npm run lint && npm run test:ci && npm run docs"
  },
  "keywords": [
    "chama",
    "savings",
    "microfinance",
    "kenya"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@google-cloud/storage": "^7.18.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "bcryptjs": "^3.0.3",
    "bull": "^4.16.5",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "express-rate-limit": "^7.5.1",
    "helmet": "^7.2.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.9.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.3",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.12",
    "opossum": "^9.0.0",
    "pg": "^8.16.3",
    "prom-client": "^15.1.3",
    "rate-limit-redis": "^4.3.1",
    "rate-limiter-flexible": "^9.0.1",
    "redis": "^5.10.0",
    "socket.io": "^4.8.1",
    "winston": "^3.19.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss-clean": "^0.1.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "newrelic": "^11.7.0",
    "compression": "^1.7.4",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.28.6",
    "@babel/node": "^7.28.6",
    "@babel/plugin-transform-modules-commonjs": "^7.28.6",
    "@babel/plugin-transform-runtime": "^7.28.5",
    "@babel/preset-env": "^7.28.6",
    "@babel/runtime": "^7.28.6",
    "@faker-js/faker": "^10.2.0",
    "@types/ioredis": "^4.28.10",
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "ioredis-mock": "^8.13.1",
    "jest": "^30.2.0",
    "jest-sonar-reporter": "^2.0.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.2.2",
    "eslint": "^8.55.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!migrations/**",
      "!scripts/**",
      "!tests/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ]
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}
