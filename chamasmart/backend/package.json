{
  "name": "chamasmart-backend",
  "version": "1.0.0",
  "description": "ChamaSmart backend API for managing chama groups",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --runInBand --config=tests/jest.config.clean.js",
    "test:ci": "node --experimental-vm-modules node_modules/jest/bin/jest.js --ci --runInBand --config=tests/jest.config.clean.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch --config=tests/jest.config.clean.js",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage --config=tests/jest.config.clean.js",
    "migrate": "npm run migrate:public && npm run migrate:table-banking && npm run migrate:performance && npm run migrate:welfare",
    "migrate:public": "node scripts/run_migration.js",
    "migrate:performance": "node scripts/run_performance_migration.js",
    "migrate:table-banking": "node scripts/run_table_banking_migration.js",
    "migrate:welfare": "node scripts/run_welfare_migration.js",
    "db:apply-invites": "node scripts/apply_schema.js",
    "db:reset": "node scripts/reset-db.js"
  },
  "keywords": [
    "chama",
    "savings",
    "microfinance",
    "kenya"
  ],
  "author": "",
  "license": "ISC",
